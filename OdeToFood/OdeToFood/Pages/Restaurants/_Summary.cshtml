@model OdeToFood.Core.Restaurant

<div class="card">
   <div class="card-header">
      <h3>@Model.Name</h3>
   </div>
   <div class="card-body">
      <span>Location: @Model.Location</span>
      <span>Location: @Model.Cuisine</span>
   </div>
   <div class="card-footer">
      <a asp-page="./Detail" asp-route-restaurantId="@Model.Id" class="btn">
         <i class="fas fa-search-plus"></i>
      </a>
      <a asp-page="./Edit" asp-route-restaurantId="@Model.Id" class="btn">
         <i class="fas fa-edit"></i>
      </a>
      <a asp-page="./Delete" asp-route-restaurantId="@Model.Id" class="btn">
         <i class="fas fa-trash"></i>
      </a>
   </div>
</div>
